// Helper functions

func intToStr(val, defaultVal int) string {
	if val == 0 {
		return fmt.Sprint(defaultVal)
	}
	return fmt.Sprint(val)
}

func boolToStr(b bool) string {
	if b {
		return "true"
	}
	return "false"
}

func floatToStr(f float32) string {
	return fmt.Sprintf("%.2f", f)
}

func toggleBgClass(checked bool) string {
	if checked {
		return "bg-blue-600"
	}
	return "bg-gray-200"
}

func toggleKnobClass(checked bool) string {
	if checked {
		return "translate-x-5"
	}
	return "translate-x-0"
}

// SourceBadge renders a small badge showing where a setting value comes from
templ SourceBadge(source string) {
	if source == "admin" {
		<span class="inline-flex items-center rounded-full bg-blue-100 px-2 py-0.5 text-xs font-medium text-blue-800" title="Overridden by admin settings">
			Admin
		</span>
	} else if source == "env" {
		<span class="inline-flex items-center rounded-full bg-yellow-100 px-2 py-0.5 text-xs font-medium text-yellow-800" title="From environment variable">
			ENV
		</span>
	} else if source == "config" {
		<span class="inline-flex items-center rounded-full bg-purple-100 px-2 py-0.5 text-xs font-medium text-purple-800" title="From config file">
			Config
		</span>
	} else if source == "default" {
		<span class="inline-flex items-center rounded-full bg-gray-100 px-2 py-0.5 text-xs font-medium text-gray-600" title="Using default value">
			Default
		</span>
	}
}

// inputBorderClass returns the appropriate border class based on error state
func inputBorderClass(err string) string {
	if err != "" {
		return "border-red-300 focus:border-red-500 focus:ring-red-500"
	}
	return "border-gray-300 focus:border-blue-500 focus:ring-blue-500"
}

// TextInputWithError renders a text input field with optional error display
templ TextInputWithError(label, name, value, placeholder, err string) {
	<div class="setting-item" data-label={ label } data-name={ name }>
		<div class="flex items-center justify-between">
			<label for={ name } class="block text-sm font-medium text-gray-700">{ label }</label>
		</div>
		<input
			type="text"
			name={ name }
			id={ name }
			value={ value }
			placeholder={ placeholder }
			class={ "mt-1 block w-full rounded-md shadow-sm sm:text-sm py-2 px-3 border", inputBorderClass(err) }
		/>
		if err != "" {
