{
  "name": "ricegrep",
  "version": "0.1.8",
  "type": "module",
  "author": "Rice Search Contributors",
  "homepage": "https://github.com/rice-search/ricegrep",
  "bugs": {
    "url": "https://github.com/rice-search/ricegrep/issues"
  },
  "repository": {
    "type": "git",
    "url": "github:rice-search/ricegrep"
  },
  "main": "index.js",
  "bin": {
    "ricegrep": "dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "postbuild": "echo 'Build complete'",
    "dev": "npx tsc && node dist/index.js",
    "test": "bats test/test.bats --filter-tags !long-running",
    "format": "biome check --write .",
    "format:check": "biome check .",
    "lint": "biome lint --check .",
    "typecheck": "tsc --noEmit",
    "prepare": "npm run build"
  },
  "keywords": [
    "rice-search",
    "hybrid-search",
    "grep",
    "code-search",
    "semantic-search",
    "local-search"
  ],
  "files": [
    "dist",
    "README.md"
  ],
  "license": "Apache-2.0",
  "description": "ricegrep - A port of ricegrep with local hybrid search provider (Rice Search). Combines BM25 + semantic search for code.",
  "dependencies": {
    "@clack/prompts": "^0.11.0",
    "@modelcontextprotocol/sdk": "^1.22.0",
    "@types/express": "^5.0.5",
    "chalk": "^5.6.2",
    "commander": "^14.0.2",
    "debug": "^4.3.7",
    "ignore": "^7.0.5",
    "istextorbinary": "^9.5.0",
    "jsonc-parser": "^3.3.1",
    "open": "^10.2.0",
    "ora": "^5.4.1",
    "p-limit": "^3.1.0",
    "winston": "^3.18.3",
    "winston-daily-rotate-file": "^5.0.0",
    "xxhash-wasm": "^1.1.0",
    "yaml": "^2.8.2",
    "yocto-spinner": "^1.0.0",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/debug": "^4.1.12",
    "@types/ws": "^8.18.1"
  }
}
