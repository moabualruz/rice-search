{
  "name": "rice-search-api",
  "version": "0.1.0",
  "description": "Rice Search - Hybrid Code Search API (NestJS + Bun)",
  "private": true,
  "license": "MIT",
  "scripts": {
    "build": "bun run nest build",
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "NODE_ENV=production bun run dist/main.js",
    "start:dev": "bun --watch src/main.ts",
    "start:local": "bun --env-file=.env.dev --watch src/main.ts",
    "start:debug": "bun --inspect src/main.ts",
    "start:prod": "NODE_ENV=production bun run dist/main.js",
    "start:cluster": "NODE_ENV=production CLUSTER_MODE=true bun run dist/main.js",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:cov": "bun test --coverage",
    "typecheck": "tsc --noEmit",
    "build:tantivy": "cd tantivy && cargo build --release"
  },
  "dependencies": {
    "@fastify/compress": "7",
    "@fastify/helmet": "^13.0.2",
    "@fastify/static": "7",
    "@nestjs/bullmq": "^11.0.4",
    "@nestjs/common": "^10.4.15",
    "@nestjs/config": "^3.3.0",
    "@nestjs/core": "^10.4.15",
    "@nestjs/platform-fastify": "10",
    "@nestjs/platform-ws": "^11.1.10",
    "@nestjs/swagger": "^8.1.0",
    "@nestjs/terminus": "^10.2.3",
    "@nestjs/websockets": "^11.1.10",
    "@zilliz/milvus2-sdk-node": "^2.5.4",
    "bullmq": "^5.66.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "nestjs-pino": "^4.5.0",
    "pathspec": "^0.9.2",
    "pino-http": "^11.0.0",
    "pino-pretty": "^13.1.3",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "tree-sitter-wasms": "^0.1.13",
    "web-tree-sitter": "^0.24.4",
    "ws": "^8.18.3",
    "xxhash-wasm": "^1.1.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.4.9",
    "@nestjs/schematics": "^10.2.3",
    "@nestjs/testing": "^10.4.15",
    "@types/bun": "latest",
    "@types/express": "^5.0.0",
    "@types/node": "^22.10.2",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^8.18.1",
    "@typescript-eslint/parser": "^8.18.1",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "prettier": "^3.4.2",
    "typescript": "^5.7.2"
  }
}
